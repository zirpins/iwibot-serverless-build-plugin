{
  "name": "iwibot-serverless-build-plugin",
  "version": "1.0.1",
  "description": "This plugin builds the iwibot-openwhisk Actions",
  "main": "./index.js",
  "engines": {
    "node": ">= 4.3"
  },
  "config": {
    "release_dir": "../iwibot-serverless-build-plugin-release/"
  },
  "scripts": {
    "prinstallPlugin": "git worktree add $npm_package_config_release_dir release && cd $npm_package_config_release_dir && git checkout release",
    "installPlugin": "tsc && cp package.json package-lock.json $npm_package_config_release_dir && cp -R ./dist/iwibot-serverless-build-plugin/* $npm_package_config_release_dir",
    "posinstallPlugin": "git commit -m $npm_package_version && git push origin && git tag v$npm_package_version && git push --tags origin cd ../iwibot-serverless-build-plugin/ && rm -R $npm_package_config_release_dir && git worktree prune",
    "uninstallPlugin": "rm -R $npm_package_config_release_dir",
    "deploy": "npm run uninstallPlugin && npm run installPlugin",
    "build": "tsc",
    "pretest": "tsc",
    "test": "mocha /test",
    "e": "echo $npm_package_version",
    "lint": "tslint 'src/**/*.ts'"
  },
  "dependencies": {
    "archiver": "^2.0.0",
    "bluebird": "^3.5.3",
    "chalk": "^2.4.2",
    "fs-extra": "^4.0.1",
    "get-folder-size": "^1.0.0",
    "is-stream": "~1.1.0",
    "js-yaml": "^3.12.1",
    "jszip": "^3.1.5",
    "lodash": "^4.17.11",
    "lutils": "^2.4.0",
    "minimatch": "^3.0.4",
    "ncp": "^2.0.0",
    "openwhisk": "^3.18.0",
    "resolve-pkg": "^1.0.0",
    "semver": "^5.6.0",
    "uglify-js": "^3.4.9",
    "walker": "^1.0.7",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/archiver": "^2.0.0",
    "@types/babel-core": "^6.25.0",
    "@types/bluebird": "^3.5.25",
    "@types/chai": "^4.1.7",
    "@types/chalk": "^0.4.31",
    "@types/fs-extra": "^4.0.0",
    "@types/fs-promise": "^1.0.3",
    "@types/graceful-fs": "^2.0.29",
    "@types/js-yaml": "^3.11.4",
    "@types/minimatch": "^2.0.29",
    "@types/mkdirp": "^0.5.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^8.10.39",
    "@types/semver": "^5.3.33",
    "@types/source-map-support": "^0.4.0",
    "@types/swagger-schema-official": "^2.0.14",
    "@types/typescript": "^2.0.0",
    "@types/uglify-js": "^2.6.32",
    "chai": "^4.2.0",
    "nyc": "^13.1.0",
    "sinon": "^6.3.5",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HSKA-IWI-VSYS/iwibot-serverless-build-plugin"
  }
}
